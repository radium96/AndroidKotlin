<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="NpcElementBinding">
        <variable
            name="name"
            type="String" />

        <variable
            name="location"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:clickable="true"
            android:padding="1dp">

            <ImageView
                android:id="@+id/npc_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/npc_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@{name}"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/npc_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@{location}"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="14"
                        android:background="@color/mococo_200">

                        <TextView
                            android:id="@+id/npc_nowstatus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:text="우호 3단계"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="17dp"/>

                        <TextView
                            android:id="@+id/npc_now"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="10000"
                            android:textColor="@color/black"
                            android:gravity="center|end"

                            android:textSize="17dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="/"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="17dp"/>

                        <TextView
                            android:id="@+id/npc_limit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="10000"
                            android:textColor="@color/black"
                            android:gravity="center|start"
                            android:textSize="17dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="8">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:text="신뢰까지 남은 수치"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/npc_remain"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="100000"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>